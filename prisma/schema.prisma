// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:.dev.db"
}

model Product {
  sku String @unique
  name String
  price Float
  inventory_qty Int
  orderDetail OrderDetail[]
  promotion Promotion[] @relation("item")
  promotion_bonus Promotion[] @relation("bonus_item")
}

model Order {
  id Int @id @default(autoincrement())
  total_price Float
  orderDetail OrderDetail[]
  promotion Promotion? @relation(fields: [promotion_id], references: [id])
  promotion_id Int? 
  status Status? @relation(fields: [status_id], references: [id])
  status_id Int?
}

model OrderDetail{
  id Int @id @default(autoincrement())
  qty Int
  price Float
  product Product @relation(fields: [product_sku], references: [sku])
  product_sku String
  order Order @relation(fields: [order_id], references: [id])
  order_id Int
}

model Promotion{
  id Int @id @default(autoincrement())
  item Product @relation("item", fields: [item_sku], references: [sku])
  item_sku String
  description String
  order Order[]
  type Type @relation(fields: [type_id], references: [id])
  type_id Int
  percentage Float
  quantity Int
  min_qty Int
  price Float
  bonus_item Product? @relation("bonus_item",fields: [bonus_item_sku], references: [sku])
  bonus_item_sku String?
}

model Status {
  id Int @id @default(autoincrement())
  name String
  order Order[]
}

model Type {
  id Int @id @default(autoincrement())
  name String
  promotion Promotion[]
}
